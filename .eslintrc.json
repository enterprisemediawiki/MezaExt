{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery"
	],
	"globals": {
		"mw": true
	},
	"rules": {
		"no-jquery/no-extend": "error",
		"no-jquery/no-hide": "error",
		"no-jquery/no-show": "error",
		"no-jquery/no-toggle": "error",
		"max-statements-per-line": [ "error", { "max": 1 } ],
		"max-len": "off",
		"no-jquery/no-global-selector": "off",
		"no-jquery/no-parse-html-literal": "off",
		"no-jquery/no-animate-toggle": "off",
		"no-jquery/no-toggle": "off",
		"no-jquery/no-event-shorthand": "off",

		// Need this off to avoid headaches with Windows. Git should make sure
		// line endings are appropriate.
		"linebreak-style": "off"
	}
}
